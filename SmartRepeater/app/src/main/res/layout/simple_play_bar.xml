<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/play_bar_container"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:layout_marginLeft="8dip"
    android:layout_marginRight="8dip"
    android:background="#ffffffff">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:src="@color/colorBgGrayLight"/>

    <ImageView
        android:id="@+id/album_cover"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@drawable/placeholder_disk_150"/>

    <LinearLayout
        android:id="@+id/play_bar_music_info"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dip"
        android:orientation="vertical"
        android:layout_toRightOf="@id/album_cover"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/music_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="150dip"
            android:lines="1"
            android:layout_marginBottom="3dip"
            android:textColor="@color/colorMusicItemTitle"
            android:textSize="12dip"
            android:text="Lesson 1"/>
        <TextView
            android:id="@+id/artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="150dip"
            android:lines="1"
            android:textColor="@color/colorMusicItemArtist"
            android:textSize="10dip"
            android:text="Admin"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/play_bar_control_panel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/play_bar_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/playbar_btn_play"/>

        <ImageView
            android:id="@+id/play_bar_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/playbar_btn_next"/>

        <ImageView
            android:id="@+id/play_bar_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/playbar_btn_playlist"/>
    </LinearLayout>

</RelativeLayout>